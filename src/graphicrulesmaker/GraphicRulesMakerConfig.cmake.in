# Compute paths
get_filename_component(GraphicRulesMaker_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
set(GraphicRulesMaker_INCLUDE_DIRS "@CONF_INCLUDE_DIRS@")

# Our library dependencies (contains definitions for IMPORTED targets)
if(NOT TARGET GraphicRulesMaker AND NOT GraphicRulesMaker_BINARY_DIR)
  include("${GraphicRulesMaker_CMAKE_DIR}/GraphicRulesMakerTargets.cmake")
endif()

set(GraphicRulesMaker_PLUGIN_PATH "@PLUGIN_INSTALL_DIR@")

# These are IMPORTED targets created by GraphicRulesMakerTargets.cmake
set(GraphicRulesMaker_LIBRARIES GraphicRulesMaker)
set(GraphicRulesMaker_EXECUTABLE GraphicRulesMakerUI)
